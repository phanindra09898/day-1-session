#include<stdio.h>

int main() {
    int n,i,j,sum;
    printf("enter a numbeer: ");
    scanf("%d",&n);
    for (i = 1; i <=n; i++) {
        sum = 0;
        
        for (j=1; j<= i/2; j++) {
            if (i%j == 0) {
                sum += j;
            }
        }
        if (sum ==i) {
            printf("%d is a perfect number \n",i);
        }
    }
    return 0;
}

                                          
